%h1 Dashboard

#dashboard.row

  .span5
    .refreshable{'data-source' => ajax_jobs_path, 'data-period' => 1}
      = render :partial => 'jobs'
  
  .span3
    .refreshable{'data-source' => ajax_workers_path, 'data-period' => 1}
      = render :partial => 'workers'

  .span4
    %h3 Systems status

    - @systems.each do |system|
      .refreshable{'data-source' => ajax_system_path(system), 'data-period' => 3}
        = render :partial => 'system', :locals => {:system => system}