= form_for @worker do |f|
  -if @worker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker.errors.count, "error")} prohibited this worker from being saved:"
      %ul
        - @worker.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :host
    = f.text_field :host
  .field
    = f.label :pid
    = f.number_field :pid
  .field
    = f.label :current_step
    = f.text_field :current_step
  .actions
    = f.submit 'Save'
